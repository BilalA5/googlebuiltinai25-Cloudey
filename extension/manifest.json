{

  "manifest_version": 3,
  "name": "exTendifAI",
  "version": "1.0.1",
  "description": "Captures text from pages, extracts entities & claims using Chrome AI, and allows cross-page comparison and reasoning.",
  
  
  "permissions": [
    "activeTab",
    "storage",
    "sidePanel",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["content.js"],
      "css": ["styles/pill.css"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Context-Link Reasoning",
    "default_icon": {
      "16": "assets/icon16.png",
      "32": "assets/icon32.png",
      "192": "assets/icon192.png"
    }
  },
  
  "side_panel": {
    "default_path": "sidebar.html"
  },
  
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["config.js", "assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
