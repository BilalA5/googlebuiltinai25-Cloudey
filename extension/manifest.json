{

  "manifest_version": 3,
  "name": "exTendifAI",
  "version": "2.0.0",
  "description": "Your AI assistant powered by Gemini Nano. Access instant answers and contextual insights via the side panel.",
  
  "permissions": [
    "activeTab",
    "storage",
    "sidePanel",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  
  "background": {
    "service_worker": "background-simple.js"
  },
  
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["content.js"],
      "css": ["styles/page-indicator.css"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_title": "exTendifAI - AI Assistant",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "192": "assets/icon192.png"
    }
  },
  
  "side_panel": {
    "default_path": "sidebar.html"
  },
  
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "192": "assets/icon192.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["config.js", "assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
