{

  "manifest_version": 3,
  "name": "Cloudey",
  "version": "2.0.0",
  "description": "Cloudey - Your AI-powered browser assistant using Google AI Studio. Summarize, translate, improve text, and chat with context.",
  
  "permissions": [
    "activeTab",
    "storage",
    "sidePanel",
    "scripting",
    "tabs",
    "i18n"
  ],
  "optional_permissions": [
    "aiLanguageModelOriginTrial"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  
  
  "background": {
    "service_worker": "background-simple.js"
  },
  
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["content.js"],
      "css": ["styles/page-indicator.css"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_title": "Cloudey - AI Assistant",
    "default_icon": {
      "16": "assets/cloudey-icon-16.png",
      "48": "assets/cloudey-icon-48.png",
      "192": "assets/cloudey-icon-192.png"
    }
  },
  
  "side_panel": {
    "default_path": "sidebar.html"
  },
  
  "icons": {
    "16": "assets/cloudey-main-icon-16.png",
    "48": "assets/cloudey-main-icon-48.png",
    "192": "assets/cloudey-main-icon-192.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["config.js", "assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
